.cards {
  width: 100%;
  display: inline-block;
  height: 240rpx;
}

.cards .head1 {
  width: 100%;
  position: relative;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.cards .head1::after {
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  width: 100%;
  height: 2rpx;
  content: '';
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  background-color: #e8e8e8;
}

.cards .head1 .cover {
  width: 20%;
  height: 80rpx;
  float: left;
}

.cards .head1 .cover image {
  width: 80rpx;
  height: 80rpx;
  float: left;
}

.cards .head1 .name1, .cards .head1 .name2 {
  width: 40%;
  float: left;
  display: inline-block;
  line-height: 55rpx;
}

.cards .head1 .name1 {
  font-size: 30rpx;
}

.cards .head1 .name2 {
  font-size: 24rpx;
}

.cards .head2 {
  width: 100%;
}

.cards .head2 .name {
  width: 50%;
  float: left;
  display: inline-block;
  font-size: 26rpx;
  line-height: 55rpx;
}
