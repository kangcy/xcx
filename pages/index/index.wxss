/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.cards {
  width: 94%;
  border-bottom: 5px solid #eee;
  display: inline-block;
  padding: 3%;
}

.cards .head1 {
  width: 100%;
  float: left;
  position: relative;
  padding-bottom: 10px;
  margin-bottom: 10px;
}

.cards .head1::after {
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  width: 100%;
  height: 1px;
  content: '';
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  background-color: #e8e8e8;
}

.cards .head1 .cover {
  width: 20%;
  height: 40px;
  float: left;
}

.cards .head1 .cover image {
  width: 40px;
  height: 40px;
  float: left;
}

.cards .head1 .name1, .cards .head1 .name2 {
  width: 40%;
  float: left;
  display: inline-block;
  text-align: center;
  line-height: 20px;
}

.cards .head1 .name1 {
  font-size: 15px;
}

.cards .head1 .name2 {
  font-size: 12px;
}

.cards .head2 {
  width: 100%;
  float: left;
}

.cards .head2 .name {
  width: 50%;
  float: left;
  display: inline-block;
  text-align: center;
  font-size: 13px;
}
